      }
    },
    {
      "name": "Get Recommendations",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:5000/movies/recommend?user_id=1", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["movies", "recommend"], "query": [{"key": "user_id", "value": "1"}]}
