    },
    {
      "name": "Rate Movie",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"user_id\": 1,\n  \"movie_id\": 603,\n  \"rating\": 4\n}"},
