  "item": [
    {
      "name": "Save Preferences",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 1,\n  \"favorite_genres\": [\"Action\", \"Sci-Fi\"],\n  \"watched\": [603, 550]\n}"
